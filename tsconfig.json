{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./src",
    "target": "es2016",
    "moduleResolution":"node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strictNullChecks": true
  },
  "typeRoots": ["node_modules/@types", "./typings/app.d.ts", "./typings/hbs.d.ts", "./typings/svg.d.ts"],
  "include": [".env.d.ts", "./src", "./node_modules/handlebars/types", "./typings"],
  "parserOptions": {
    "project": "./tsconfig.json"
  }
}
